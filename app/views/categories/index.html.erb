<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">ID</th>
      <th scope="col">Color</th>
      <th scope="col">Color ID</th>
      <th scope="col">Count of Tasks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.order(title: :asc).each do |category| %>
      <tr>
        <td> <%= link_to category.title, category_path(category.title) %></td>
        <td> <%=category.id %></td>
        <td>
          <svg width="20" height="20">
          <rect width="20" height="20" style="fill:<%= category.color %>" />
          </svg>
        </td>
        <td> <%=category.color %></td>
        <td> <%=category.tasks.count %></td>
        <td><%= link_to 'Show', category %></td>
        <td><%= link_to 'Edit', edit_category_path(category) %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-light"><%= link_to 'New Category', new_category_path %></button>
