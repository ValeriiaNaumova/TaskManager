<p id="notice"><%= notice %></p>

<h1>Tags</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">ID</th>
      <th scope="col">Color</th>
      <th scope="col">Color ID</th>
      <th scope="col">Count of Tasks</th>
      <th scope="col">Created at</th>
      <th scope="col">Updated at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.order(title: :asc).each do |tag| %>
      <tr>
        <td><%= link_to tag.title, tag_path(tag.title) %></td>
        <td> <%= tag.id %></td>
        <td>
          <svg width="20" height="20">
            <rect width="20" height="20" style="fill:<%= tag.color %>" />
          </svg>
        </td>
        <td> <%= tag.color %></td>
        <td> <%= tag.tasks.count %></td>
        <td> <%= tag.created_at.to_formatted_s(:long)  %></td>
        <td> <%= tag.updated_at.to_formatted_s(:long)  %></td>
        <td><%= link_to 'Show', tag %></td>
        <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
        <td><%= link_to 'Destroy', tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-light"><%= link_to 'New Tag', new_tag_path %></button>
